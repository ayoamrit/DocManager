@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-page">
    <div class="login-heading">Fleetwood Immigration</div>
    <form class="login-form" method="post">
        <h1>Login</h1>
        <input type="text" class="login-username" name="Username" placeholder="Username" required/>
        <input type="password" class="login-password" name="Password" placeholder="Password" required />
        <button class="login-button" type="submit">Submit</button>
    </form>
</div>
